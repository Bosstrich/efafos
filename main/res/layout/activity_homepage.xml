<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Homepage">


    <RelativeLayout
        android:id="@+id/homeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView3"
            android:layout_width="143dp"
            android:layout_height="132dp"
            android:layout_centerHorizontal="true"
            android:elevation="20dp"
            android:src="@drawable/farmer_avatar"
            app:civ_border_color="#D3C53D"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:elevation="20dp"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="20dp" />


        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:layout_marginTop="72dp"
            android:alpha="0.9"
            android:background="@color/homeview"

            />


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="255dp"
        android:layout_height="141dp"
        android:layout_below="@id/homeview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/edafos" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/imageView"
        android:alpha="0.9"
        android:background="@color/secondary"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Test Soil:"
            android:gravity="center_horizontal"
            />


        <Button
            android:id="@+id/tSoil_button"
            android:layout_width="292dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/yellowb_ripple"
            android:drawableLeft="@drawable/camera"
            android:drawablePadding="-50dp"
            android:drawableTint="@color/white"
            android:paddingStart="20dp"
            android:text="camera"
            android:textColor="#F8F8F8"
            android:textSize="25sp"
           />

        <Button
            android:id="@+id/gallbtn"
            android:layout_width="292dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/yellowb_ripple"
            android:drawableLeft="@drawable/gallery"
            android:drawablePadding="-50dp"
            android:drawableTint="@color/white"
            android:paddingStart="20dp"
            android:text="Gallery"
            android:textColor="#F8F8F8"
            android:textSize="25sp"
             />

        <Button
            android:id="@+id/Logout_button"
            android:layout_width="288dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/yellowb_ripple"
            android:text="LogOut"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="154dp"
            android:layout_marginTop="72dp"
            android:alpha="0.9"
            android:background="@color/homeview"

            />

        />


    </LinearLayout>



</RelativeLayout>